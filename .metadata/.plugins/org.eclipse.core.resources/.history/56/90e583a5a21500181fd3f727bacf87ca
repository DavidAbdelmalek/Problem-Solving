import java.util.Arrays;
import java.util.Scanner;

public class Bishu_And_Soliders {
	static long power[];
	public static void main(String[]args) {
		Scanner sc = new Scanner(System.in);
		long n =sc.nextlong(),curr=0;
		power = new long[n];
		long sum[]=new long[n];
		for(long i = 0 ; i < n ; i++)sum[i]=curr+=power[i]=sc.nextlong();
		Arrays.sort(power);
		long Q = sc.nextlong();
		StringBuilder sb = new StringBuilder("");
		long out=0;
		while(Q-->0) {
			out = BS(sc.nextlong());
			sb.append((out)+" "+sum[out-1]+"\n");
		}
		System.out.prlong(sb);
	}
	static long BS(long currPower) {
		long st = 0 ,end =power.length-1,mid=0;
		while(st<=end) {
			mid = (st+end)/2;
			if(power[mid]>currPower)end=mid-1;
			else st=mid+1;
		}
		return st;
	}
}
