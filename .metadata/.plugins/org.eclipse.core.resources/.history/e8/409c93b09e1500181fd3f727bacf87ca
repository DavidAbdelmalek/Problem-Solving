import java.util.Scanner;

public class Perfect_Number {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();

		int[] arr = new int[10001];

		for (int i = 19, sum; i <= 10000; i++) {
			sum = sum(i);
			if (sum == 10)
				n--;
			if (n == 0) {
				System.out.println(i);
				return;
			}
		}

	}
}
